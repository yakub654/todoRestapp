 <h2 class="page-header">Dashboard</h2>
              <div class="col-sm-6 col-sm-offset-3">
                <form action="/users/todos" method="post" class="form-group" >
                  <input class="form-control" type="text" name="task" placeholder="Enter your todo task here">
                  <br>
                  <button class="btn btn-primary pull-right" type="submit">ADD TASK</button>
                </form>
                <button class="btn btn-success pull-right" style="margin-top:20px;"><h3>Remaining Tasks : {{counts}}</h3></button>
              </div>
              <div class="col-sm-6 col-sm-offset-3">
                  <br>
                    <br>
                  {{#todos}}
                    <div class="well well-md text-danger" style="marging-top:20px;">
                      <form action="/users/todos/{{_id}}/completed" method="post">{{task}} {{counts}}<button type="submit" class="btn btn-primary pull-right">Done</button></form>
                    </div>
                  {{/todos}}
  
              </div>
          </div>
          <h1 class="text-center" style="padding-top: 20x; padding-bottom: 20px;">Completed task</h1>
          <div class="row"> 
            <div class="col-sm-6 col-sm-offset-3">
                  {{#doneTodos}}
                    <div class="well well-md text-danger">  
                      <form action="/users/todos/{{_id}}/completed" method="post">{{task}}<button type="submit" class="btn btn-primary pull-right">Whoops!</button></form>
                      <br>
                      <form action="/users/todos/{{_id}}/deleted" method="post"><button type="submit" class="btn btn-danger pull-right" action="/todos/{{_id}}/deleted">Delete</button></form>
                      <br>
                    </div>
               {{/doneTodos}}
        </div>
      </div> 
</div>